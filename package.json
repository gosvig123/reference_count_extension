{
  "name": "css-class-counter",
  "displayName": "Reference Counter",
  "description": "Counts and displays the usage of references in your code",
  "version": "0.2.0",
  "icon": "icon.png",
  "engines": {
    "vscode": "1.96.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onCommand:css-class-counter.countClasses",
    "onCommand:css-class-counter.countClassesInWorkspace",
    "onCommand:css-class-counter.findUnusedSymbols",
    "onCommand:css-class-counter.findUnusedSymbolsInCurrentFile",
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.91.0",
    "typescript": "^5.4.5",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1"
  },
  "publisher": "gosvig123",
  "repository": {
    "type": "git",
    "url": "https://github.com/gosvig123/reference_count_extension"
  },
  "license": "MIT",
  "dependencies": {
    "react": "^18.3.1",
    "strip-ansi": "^6.0.1",
    "string-width": "^4.2.3",
    "wrap-ansi": "^7.0.0",
    "babel-plugin-macros": "^3.1.0",
    "bufferutil": "^4.0.1"
  },
  "contributes": {
    "commands": [
      {
        "command": "css-class-counter.findUnusedSymbols",
        "title": "Find Unused Symbols in Workspace"
      },
      {
        "command": "css-class-counter.findUnusedSymbolsInCurrentFile",
        "title": "Find Unused Symbols in Current File"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "unusedSymbolsView",
          "name": "Unused Symbols"
        }
      ]
    },
    "configuration": {
      "title": "Reference Counter",
      "properties": {
        "referenceCounter.excludePatterns": {
          "type": "array",
          "default": ["./node_modules", "./.next", "./build"],
          "items": {
            "type": "string"
          },
          "description": "Patterns to exclude from reference counting. all file names that include the added string or folders that contain the added string will be excluded. Example: to exclude all files in the 'node_modules' folder, add 'node_modules' to the list."
        },
        "referenceCounter.includeImports": {
          "type": "boolean",
          "default": false,
          "description": "Include import statements in reference count."
        },
        "referenceCounter.minimalisticDecorations": {
          "type": "boolean",
          "default": true,
          "description": "Use a minimalistic, compact version of the decorator."
        },
        "referenceCounter.dynamicUpdateDelay": {
          "type": "number",
          "default": 1000,
          "description": "Delay in milliseconds before updating unused symbols after a file change."
        },
        "referenceCounter.fileAnalysisCooldown": {
          "type": "number",
          "default": 5000,
          "description": "Minimum time in milliseconds between analyses of the same file to prevent excessive CPU usage."
        }
      }
    }
  }
}
